	"2023-02-20-V01",

"mirrors" :
	[
		"http://localhost/plugins/{$JAR_FILE}",
		"https://github.com/helcat/easy-freetools/tree/main/dist/{$JAR_FILE}?raw=true"
	],

"categories" :
	[
		{"key":"TOOLS", "en":"Tools", "it":"Tools", "fr":"Tools"}
	],

"plugin-list" :
	[
		{
			"name_en":"Easy, Free Tools", "name_it":"Easy, Free Tools", "name_fr":"Easy, Free Tools",
			"description_en":"A very easy set of tools for anyone to use",
			"description_it":"A very easy set of tools for anyone to use",
			"description_fr":"A very easy set of tools for anyone to use",
			"jarfile":"EFX.jar", "class-name":"com.engine.EFXStart", "class-method":"start",
			"caregory":"TOOLS",
			"active":true
		}
	],

"theme-list" :
	{
		"LIGHT" :
			{
				"STAGE-BACKGROUND-COLOUR" 			: "white",
				"STAGE-BORDER-COLOUR" 				: "gray",

				"TOP-BAR-BACKGROUND-COLOUR" 		: "green" ,
				"TOP-BAR-BORDER-COLOR" 				: "forestgreen",
				"TOP-BAR-TEXT-COLOUR" 				: "#FFFFFF",
				"TOP-BAR-TEXT-SIZE" 				: "10",

				"MENU-BAR-BACKGROUND-HOVER-COLOUR" 	: "forestgreen" ,
				"MENU-BAR-TEXT-COLOUR" 				: "#FFFFFF" ,
			}
	},

"theme-keys" :
	{
		"STAGE_WIN" 	: "-fx-background-color: ${STAGE-BACKGROUND-COLOUR}; -fx-border-color: ${STAGE-BORDER-COLOUR}; -fx-border-width: 1px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, .65), 20, 0.19, 0, 0);",
		"STAGE" 		: "-fx-background-color: ${STAGE-BACKGROUND-COLOUR}; -fx-border-color: ${STAGE-BORDER-COLOUR}; -fx-border-width: 1px; ",
		"TOP_BAR" 		: "-fx-background-color: ${TOP-BAR-BACKGROUND-COLOUR}; -fx-border-style: none none solid none; -fx-border-width: 0px 0px 1px 0px; -fx-border-color: transparent transparent ${TOP-BAR-BORDER-COLOR} transparent;",
		"TOP_BAR_TEXT"	: "-fx-font-size: ${TOP-BAR-TEXT-SIZE}pt; -fx-text-fill: ${TOP-BAR-TEXT-COLOUR};",
		"MENU_BAR" 		: "-fx-defaulttext-color: ${MENU-BAR-TEXT-COLOUR}; -fx-defaultPanel-Background-Color: transparent; -fx-defaultItemHover-Color: ${MENU-BAR-BACKGROUND-HOVER-COLOUR}; -fx-defaultPanel-Border-Color: transparent;",


	}
